{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "FastAPI Dockerized",
            "type": "node-terminal",
            "request": "launch",
            "command": "docker logs -f alanpay_backend",
            "preLaunchTask": "Docker Compose Up",
            "postDebugTask": "Docker Compose Down"
        },
        {
            "name": "FastAPI Local (UV)",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "app.main:app",
                "--host",
                "0.0.0.0",
                "--port",
                "8000",
                "--reload"
            ],
            "envFile": "${workspaceFolder}/dev.env",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal"
        }
    ]
}
