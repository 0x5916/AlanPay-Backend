# Production Environment Configuration for AlanPay Backend

# Application Settings
MAX_QR_ALIVE_HOUR=604800
ADMIN_ENABLE=false

# PostgreSQL Database Configuration
POSTGRES_USER=pguser_prod
POSTGRES_PASSWORD=your_secure_production_password_here
POSTGRES_DB=pay_prod
POSTGRES_HOST=alanpay_db
POSTGRES_PORT=5432

# JWT Configuration (Use strong, unique keys for production)
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_SECRET_KEY=your_very_secure_jwt_secret_key_for_production
FERNET_KEY=your_secure_fernet_key_for_production

# CORS Origins (Update with your production frontend URLs)
CORS_ORIGINS=["https://yourdomain.com", "https://www.yourdomain.com"]

# Logging Level for Production
LOG_LEVEL=INFO
